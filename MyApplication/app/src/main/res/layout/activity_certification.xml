<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_certification"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background"
    android:orientation="vertical"
    tools:context="com.zhuanworld.dev.my.myfragment.activity.CertificationActivity">
    <include layout="@layout/title_head_login_forget"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:background="@color/white">
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="真实姓名"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入真实姓名"
            android:gravity="end|center"
            android:background="@null"
            android:textColorHint="@color/text_hint"
            android:layout_marginRight="15dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:background="@color/white">
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="身份证号"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入身份证号"
            android:gravity="end|center"
            android:background="@null"
            android:textColorHint="@color/text_hint"
            android:layout_marginRight="10dp"/>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="认证"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:background="@drawable/shape_button_certification"
        android:layout_marginTop="35dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"/>
</LinearLayout>
