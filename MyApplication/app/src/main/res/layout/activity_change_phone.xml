<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_change_phone"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_background"
    tools:context="com.zhuanworld.dev.activity.ChangePhoneActivity">
    <include layout="@layout/title_head_login_forget"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:background="@color/white">
        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:text="输入原手机号"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入原手机号"
            android:gravity="end|center"
            android:textColorHint="@color/text_hint"
            android:background="@null"
            android:layout_marginRight="15dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:background="@color/white">
        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:text="输入新手机号"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入新手机号"
            android:gravity="end|center"
            android:background="@null"
            android:textColorHint="@color/text_hint"
            android:layout_marginRight="15dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:background="@color/white">
        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:text="输入验证码"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入验证码"
            android:textColorHint="@color/text_hint"
            android:gravity="end|center"
            android:background="@null"
            android:layout_marginRight="10dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:layout_gravity="end"
        android:background="@drawable/shape_yanzhengma"
        android:text="获取验证码"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:gravity="center"/>

</LinearLayout>
