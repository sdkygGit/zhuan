<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_with_draws_cash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_background"
    tools:context="com.zhuanworld.dev.activity.WithDrawsCashActivity">
    <include layout="@layout/title_head_login_forget"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/white">
        <ImageView
            android:id="@+id/bank_icon_dui_huan"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/icon_duihuantixian_jianshe"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:id="@+id/bank_name_dui_huan"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="建设银行"
            android:textSize="18sp"
            android:layout_toRightOf="@id/bank_icon_dui_huan"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:id="@+id/bank_card_type"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="储蓄卡"
            android:textSize="18sp"
            android:layout_toRightOf="@id/bank_icon_dui_huan"
            android:layout_below="@id/bank_name_dui_huan"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/bank_icon_dui_huan"
            android:layout_below="@id/bank_card_type"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <EditText
                android:id="@+id/bank_card_number1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:editable="false"
                android:textSize="18sp"
                android:background="@null"
                android:cursorVisible="false"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                />
            <EditText
                android:id="@+id/bank_card_number2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:editable="false"
                android:textSize="18sp"
                android:background="@null"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                />
            <EditText
                android:id="@+id/bank_card_number3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:editable="false"
                android:textSize="18sp"
                android:background="@null"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                />
            <EditText
                android:id="@+id/bank_card_number4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:editable="false"
                android:textSize="18sp"
                android:background="@null"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                />
            <EditText
                android:id="@+id/bank_card_number5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:editable="false"
                android:textSize="18sp"
                android:background="@null"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                />

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/white"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/withdraws_cash_coin_number"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="10000"
            android:textSize="20sp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:textColor="#4d4d4d"
            android:gravity="center_vertical"
            />
        <TextView
            android:id="@+id/withdraws_cash_coin"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="金币（个）"
            android:textSize="20sp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:textColor="#4d4d4d"
            android:gravity="center_vertical"
            android:layout_below="@id/withdraws_cash_coin_number"
            />
         <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="注：金币可兑换优惠券等"
            android:textSize="18sp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:textColor="#4d4d4d"
            android:gravity="center_vertical"
            android:layout_below="@id/withdraws_cash_coin"
            />
        <TextView
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:text="兑换"
            android:gravity="center"
            android:background="@drawable/shape_button_certification"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/white"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/withdraws_cash_money_number"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="10000"
            android:textSize="20sp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:textColor="#4d4d4d"
            android:gravity="center_vertical"
            />
        <TextView
            android:id="@+id/withdraws_cash_money"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="零钱（元）"
            android:textSize="20sp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:textColor="#4d4d4d"
            android:gravity="center_vertical"
            android:layout_below="@id/withdraws_cash_money_number"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="注：零钱30元以上可兑换"
            android:textSize="18sp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:textColor="#4d4d4d"
            android:gravity="center_vertical"
            android:layout_below="@id/withdraws_cash_money"
            />
        <TextView
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:text="兑换"
            android:gravity="center"
            android:background="@drawable/shape_button_certification"/>



    </RelativeLayout>


</LinearLayout>
